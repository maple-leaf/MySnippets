endsnippet

snippet bgp "background: image no-repeat position (background)"
background: url($1) ${2:no-}repeat${3:-x} ${4:right/top left/top center/top right/center left/center center/center right/bottom left/bottom center/bottom right/x-% y-%/x-pos y-pos};$0
endsnippet

snippet bgfull "background(full):  color image repeat attachment position (background)"
background: #${1:fff} url($2) ${3:repeat/repeat-x/repeat-y/no-repeat} ${4:scroll/fixed} ${5:top left/top center/top right/center left/center center/center right/bottom left/bottom center/bottom right/x-% y-%/x-pos y-pos};$0
endsnippet

snippet bn "background-image:  none (background)"
background-image: none;$0
endsnippet


